---
import ContentHeading from "./ContentHeading.astro";
import LatestProject from "./LatestProject.astro";
---

<div class="mt-6 md:mt-12">
	<ContentHeading />
	<div class="mt-14 flex flex-col gap-y-2 md:mt-20">
		<p class="text-2xl font-medium text-white">Latest Project</p>
		<LatestProject />
	</div>
	<div>
		<div class="absolute top-28 -z-10 md:left-24">
			<p
				class="text-[15rem] font-bold text-neutral-300 select-none md:text-[20rem] dark:text-neutral-500">
				Porfolio
			</p>
		</div>
		<div class="rectangle bg-primary -z-10 md:opacity-80 dark:md:opacity-60"></div>
		<div class="rectangle-2 bg-primary -z-10 hidden md:block md:opacity-80"></div>
	</div>
</div>
