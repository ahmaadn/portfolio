---
import { Icon } from "astro-iconify";

interface Props {
	name: string;
	icon: string;
	[key: string]: any;
}
const { name, icon } = Astro.props;
---

<button
	{...Astro.props}
	class="blend group border-border bg-main-light text-content flex w-fit items-center gap-2 rounded border px-3 py-2">
	<Icon name={icon} width="18" height="18" />
	<span class="blend text-sm capitalize">{name}</span>
</button>
