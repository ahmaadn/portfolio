---
const { project, class: className = "" } = Astro.props;
---

<div class:list={["flex", className]}>
	<div class="flex flex-col gap-y-4 lg:max-w-lg">
		<div class="">
			<a href={project.url} target="_blank" class="link text-lg font-semibold">{project.name}</a>
			<p class="text-sm">{project.desc.short}</p>
		</div>
	</div>
</div>
