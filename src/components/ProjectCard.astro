---
import { Image } from "astro:assets";
import Badge from "./Badge.astro";
import Button from "./Button.astro";
import Card from "./Card.astro";
import CardContent from "./CardContent.astro";

const { project } = Astro.props;
---

<Card>
	<div class="relative aspect-video">
		<Image
			src={project.thumbnail}
			alt={project.title}
			class="w-full object-cover transition-transform hover:scale-105"
		/>
	</div>
	<CardContent>
		<h3 class="text-lg font-bold sm:text-xl dark:text-white">{project.title}</h3>
		<div class="mt-2 inline-flex flex-wrap gap-2">
			{project.tags.map((tag) => <Badge>{tag}</Badge>)}
		</div>
		<p class="mt-4 max-w-sm overflow-hidden text-sm">{project.description}</p>
		<div class="mt-4 inline-flex flex-wrap gap-2">
			<Button label="github" icon="mdi:github" href={project.url} target="_blank" />
		</div>
	</CardContent>
</Card>
