---
import { SOSIAL_LINK } from "@/config";
import { Icon } from "astro-iconify";
---

<div class="sosial-links inline-flex gap-4 text-sm">
	{
		SOSIAL_LINK.map(({ label, url, icon, ...extra }) => (
			<a
				href={url}
				class="blend group flex w-fit items-center gap-2 rounded-full border border-neutral-200 px-4 py-1 transition-colors hover:border-neutral-800 hover:bg-neutral-800"
				{...extra}>
				<Icon name={icon} width="16" height="16" />
				<span class="blend text-sm capitalize">{label}</span>
			</a>
		))
	}
</div>
