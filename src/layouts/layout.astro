---
import { SITE } from "@/config";
import "@/styles/globals.css";
import { SEO } from "astro-seo";

interface Props {
	title?: string;
	class?: string;
	description?: string;
	image?: string;
}

const { title, description } = Astro.props;
---

<html lang="en" class="scroll-smooth">
	<head>
		<SEO
			charset="UTF-8"
			title={title}
			titleDefault={SITE.title}
			titleTemplate={SITE.title + " - %s"}
			description={description}
			extend={{
				link: [{ rel: "icon", href: "/favicon.svg" }],
				meta: [{ name: "viewport", content: "width=device-width" }],
			}}
			openGraph={{
				basic: {
					title: SITE.title,
					type: "website",
					image: "images/profile_pict_3.jpg",
				},
				optional: {
					description: description,
				},
			}}
		/>
		<slot name="head" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap"
			rel="stylesheet"
		/>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-D3JY72DTCB"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());
			gtag("config", "G-D3JY72DTCB");
		</script>
		<link rel="sitemap" href="/sitemap-index.xml" />
	</head>
	<body>
		<div class="relative overflow-x-hidden">
			<slot />
		</div>
		<div class="border-border border-t">
			<div class="container mx-auto max-w-7xl">
				<div
					class="flex w-full flex-col py-4 text-center text-sm md:flex-row md:justify-between">
					<p>
						Â© {new Date().getFullYear()}
						{SITE.author} | All rights reserved.
					</p>
					<p class="mt-2">
						Theme inspired by <a href="https://firebase.blog/" class="link">firebase blog</a>
					</p>
				</div>
			</div>
		</div>
	</body>
</html>
